<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<servlet>
		<servlet-name>ListErrandsCreatedByUser</servlet-name>
		<servlet-class>com.errandbarter.server.controller.ListErrandsCreatedByUserServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ListErrandsPerformedByUser</servlet-name>
		<servlet-class>com.errandbarter.server.controller.ListErrandsPerformedByUserServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ViewErrandServlet</servlet-name>
		<servlet-class>com.errandbarter.server.controller.ViewErrandServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ListErrandsServlet</servlet-name>
		<servlet-class>com.errandbarter.server.controller.ListErrandsServlet</servlet-class>
	</servlet>
        <servlet>
		<servlet-name>PerformErrandServlet</servlet-name>
		<servlet-class>com.errandbarter.server.controller.PerformErrandServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UserInfoServlet</servlet-name>
		<servlet-class>com.errandbarter.server.controller.UserInfoServlet</servlet-class>
	</servlet>
        <servlet>
		<servlet-name>RewardServlet</servlet-name>
		<servlet-class>com.errandbarter.server.controller.RewardServlet</servlet-class>
	</servlet>


	<servlet-mapping>
		<servlet-name>ListErrandsCreatedByUser</servlet-name>
		<url-pattern>/listErrands</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ListErrandsPerformedByUser</servlet-name>
		<url-pattern>/listErrandsPerformed</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ViewErrandServlet</servlet-name>
		<url-pattern>/viewErrand</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ListErrandsServlet</servlet-name>
		<url-pattern>/list</url-pattern>
	</servlet-mapping>
        <servlet-mapping>
		<servlet-name>PerformErrandServlet</servlet-name>
		<url-pattern>/perform</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UserInfoServlet</servlet-name>
		<url-pattern>/whois</url-pattern>
	</servlet-mapping>
        <servlet-mapping>
		<servlet-name>RewardServlet</servlet-name>
		<url-pattern>/reward</url-pattern>
	</servlet-mapping>

	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
